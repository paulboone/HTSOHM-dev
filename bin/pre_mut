#!/bin/bash

DIR_1=$1
START=$2
LENGT=$3
DIR_0=$4
DIR_2=$5

echo 'Preparing for mutation...'

cd ../data

../bin/CH4cat $START $LENGT
../bin/SAcat $START $LENGT
../bin/HVcat $START $LENGT

mkdir $DIR_1
mv *.txt $DIR_1

../bin/rmdata

cd ..
cp data/$DIR_1/* $DIR_1
./bin/cat_dirs $DIR_0 $DIR_1 $DIR_2

echo '...done!'
